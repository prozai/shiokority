@startuml Component Diagram
package "User Interface" {
  component "Website" as WebsiteComponent
  component "Mobile Device" as MobileDeviceComponent
}

package "Backend System" {
  component "Study Pod Management" as StudyPodManagementComponent
  component "QR Code Generation" as QRCodeGenerationModule
  component "Payment Module" as PaymentModule
  component "MFA Biometric Integration" as MFABiometricIntegrationModule
  component "QR Code Verification" as QRCodeVerificationModule
}

package "Database" {
  database "System Database" as Database
}

WebsiteComponent --> StudyPodManagementComponent
StudyPodManagementComponent --> QRCodeGenerationModule
QRCodeGenerationModule --> MobileDeviceComponent
MobileDeviceComponent --> PaymentModule
PaymentModule --> MFABiometricIntegrationModule
MFABiometricIntegrationModule --> QRCodeVerificationModule
QRCodeVerificationModule --> Database
PaymentModule --> Database
QRCodeGenerationModule --> Database
@enduml
